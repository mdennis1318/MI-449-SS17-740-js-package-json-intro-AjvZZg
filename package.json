{
  "name": "sassy-project",
  "version": "1.0.0",
  "stylelint": {
    "extends": "stylelint-config-standard"
  },
  "scripts": {
    "dev:server": "live-server",
    "dev:sass": "node-sass source/scss/style.scss --output=compiled/css --output-style=compressed --source-map=true --watch",
    "dev": "run-p dev:*",
    "build:sass": "node-sass source/scss/style.scss --output=compiled/css --output-style=compressed --source-map=true",
    "build:htmlhint": "htmlhint index.html",
    "build:stylelint": "stylelint 'source/scss/**/*.scss'",
    "build:standard": "standard",
    "deploy:surge": "surge --project . --domain https://dennis57-kg-tgc7noax99ajvzzg.surge.sh",
    "build": "run-s build:*",
    "deploy": "run-s build:* deploy:surge"
  },
  "devDependencies": {
    "htmlhint": "^0.9.13",
    "live-server": "^1.2.0",
    "node-sass": "^4.5.2",
    "npm-run-all": "^4.0.2",
    "standard": "^10.0.1",
    "stylelint": "^7.10.1",
    "stylelint-config-standard": "^16.0.0",
    "surge": "^0.19.0"
  }
}
